# Environment Variables Template
# Copy these to Azure App Service Configuration -> Application Settings

# Azure Entra ID Configuration
TENANT_ID=common
CLIENT_ID=your_client_id_here
CLIENT_SECRET=your_client_secret_here

# Application URLs
BASE_URL=https://your-app.azurewebsites.net
FRONTEND_URL=https://your-app.azurewebsites.net
REDIRECT_URI=https://your-app.azurewebsites.net/auth/callback

# Session Configuration
SESSION_SECRET=your_secure_session_secret_here
SESSION_NAME=gtravel_session
SESSION_MAX_AGE=86400000

# Database Configuration
DB_SERVER=your-sql-server.database.windows.net
DB_DATABASE=GravelDB
DB_USERNAME=your-db-username
DB_PASSWORD=your-db-password
DB_ENCRYPT=true
DB_TRUST_SERVER_CERTIFICATE=false

# Security Settings
NODE_ENV=production
CORS_ORIGIN=https://your-app.azurewebsites.net
LOG_LEVEL=info